{
  "name": "chalk-lsp",
  "version": "0.1.0",
  "description": "LSP server for Chalk",
  "main": "dist/extension.js",
  "engines": {
    "vscode": "^1.63.0"
  },
  "activationEvents": [
    "onLanguage:python",
    "onView:chalk-environments",
    "onCommand:chalk-lsp.refreshEnvironments",
    "onCommand:chalk-lsp.selectEnvironment"
  ],
  "contributes": {
    "languages": [
      {
        "id": "python",
        "extensions": [
          ".py"
        ]
      }
    ],
    "commands": [
      {
        "command": "chalk-lsp.hiChalk",
        "title": "Hi Chalk"
      },
      {
        "command": "chalk-lsp.showConfig",
        "title": "Chalk: Show Configuration"
      },
      {
        "command": "chalk-lsp.runLint",
        "title": "Chalk: Lint"
      },
      {
        "command": "chalk-lsp.refreshEnvironments",
        "title": "Chalk: Refresh Environments",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "chalk-explorer",
          "title": "Chalk",
          "icon": "$(layers)"
        }
      ]
    },
    "views": {
      "chalk-explorer": [
        {
          "id": "chalk-environments",
          "name": "Environments"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "chalk-lsp.refreshEnvironments",
          "when": "view == chalk-environments",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "watch": "tsc --watch"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.2",
    "vscode-languageserver": "^8.0.2",
    "vscode-languageserver-textdocument": "^1.0.8",
    "vscode-uri": "^3.0.7"
  },
  "devDependencies": {
    "@types/node": "^16.18.34",
    "@types/vscode": "^1.63.0",
    "typescript": "^4.9.5"
  }
}
