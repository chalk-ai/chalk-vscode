{
  "name": "chalk-lsp",
  "version": "0.1.0",
  "description": "LSP server for Chalk",
  "main": "dist/extension.js",
  "engines": {
    "vscode": "^1.63.0"
  },
  "activationEvents": [
    "onLanguage:*"
  ],
  "contributes": {
    "languages": [{
      "id": "chalk",
      "extensions": [".chalk"]
    }],
    "commands": [
      {
        "command": "chalk-lsp.hiChalk",
        "title": "Hi Chalk"
      },
      {
        "command": "chalk-lsp.showConfig",
        "title": "Chalk: Show Configuration"
      }
    ]
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "watch": "tsc --watch"
  },
  "dependencies": {
    "vscode-languageserver": "^8.1.0",
    "vscode-languageserver-textdocument": "^1.0.8",
    "vscode-languageclient": "^8.1.0",
    "vscode-uri": "^3.0.7"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@types/vscode": "^1.63.0",
    "typescript": "^5.0.4"
  }
}